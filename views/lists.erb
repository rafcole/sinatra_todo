<ul id="lists">
  <% sort_lists(@lists) do |list, i| %>
    <li class=<%= list_class(list)%> > 
      <a> 
        <h2><a href="/lists/<%=i%>"><%=h(list[:name])%></a></h2>
      </a>
      <p><%="#{todos_remaining_count(list)}/#{todos_count(list)}"%></p> 
    </li>
  <% end %>
</ul>

